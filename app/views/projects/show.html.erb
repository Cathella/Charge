<p id="notice"><%= notice %></p>

<%= link_to '<i class="fas fa-arrow-left mr-3"></i>Back to projects'.html_safe, projects_path, class: 'text-muted' %>

<div class="row">
  <div class="col-lg-4">
    <div>
      <h1 class="my-5">
        Project: <br>
        <span class="text-muted">
          <%= @project.title %>
        </span>
      </h1>
      <p class="mb-5">
        <span class="font-weight-bold text-muted mb-3 d-block">
          About this project.
        </span>
        <span class="text-muted">
          <%= @project.description %>
        </span>
      </p>
      <%= link_to '<i class="fas fa-pencil-alt mr-2"></i>Edit'.html_safe, edit_project_path(@project), class: 'mr-4 font-weight-bold'%>
      <%= link_to '<i class="fas fa-trash mr-2"></i>Delete'.html_safe, @project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'font-weight-bold' %>
    </div>
  </div>
  <div class="col-lg-8">
    <div class="bg-light py-4 px-5">
      <% if current_user %>
        <div>
          <h4 class="text-muted border-bottom py-4 mb-4 text-center">Tasks for this project</h4>
          <div class="text-center pt-3">
            <%= link_to '<i class="fas fa-plus mr-2"></i>New task'.html_safe, new_task_path, class: 'border py-2 px-3 rounded' %>
          </div>
          <div class="mt-5 w-75 mx-auto">
            <% @tasks.each do |task| %>
              <div class="d-flex my-3">
                <%= form_tag('', method: '', class: 'mt-1') do %>
                  <%= check_box_tag(:complete) %>
                <% end %>

                <span class="ml-3">
                  <%= link_to task.description.capitalize, task, class: 'font-weight-bold' %>
                </span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

