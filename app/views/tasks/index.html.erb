<p id="notice"><%= notice %></p>
<%= link_to '<i class="fas fa-arrow-left mr-3"></i>Back to projects'.html_safe, projects_path, class: 'text-muted' %>

<h1 class="text-center mt-4 border-bottom pb-4 mb-5">My <span class="text-muted">Tasks</span></h1>

<div class="text-center">
  <div>
    <%= link_to '<i class="fas fa-plus text-primary"></i>'.html_safe, new_task_path, class: 'border py-2 px-3 rounded text-muted' %>
  </div>
  <div class="mt-4">
    <%= link_to 'New Task', new_task_path, class: 'text-muted' %>
  </div>
</div>

<div class="bg-light mt-4 mx-auto w-50 rounded py-4 px-5">
<% @tasks.each do |task| %>
  <span class="d-block border-bottom py-3 pl-2">
    <i class="fas fa-arrow-circle-right mr-3 text-muted"></i>
    <%= link_to task.description, task, class: 'font-weight-bold text-muted' %>
  </span>
<% end %>
</div>
