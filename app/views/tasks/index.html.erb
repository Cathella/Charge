<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<ul>
<% @tasks.each do |task| %>
  <li>
    <%= task.description %>
    <%= link_to 'Show', task %>
    <%= link_to 'Edit', edit_task_path(task) %>
    <%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %>
  </li>
<% end %>
</ul>

<br>

<%= link_to 'New Task', new_task_path %>
